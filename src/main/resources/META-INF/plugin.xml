<idea-plugin>
    <id>io.github.likeanowl.topias</id>
    <name>Topias</name>
    <vendor email="svitkovsergey@gmail.com">Contacts</vendor>
    <depends>Git4Idea</depends>
    <description>Plugin for VCS (Git) changes frequency visualization in Java projects. In case of any issues, please create an issue in plugin's GitHub repository: https://github.com/ml-in-programming/topias</description>
    <version>1.0.1b</version>
    <idea-version since-build="183.2940.10"/>
    <change-notes>Fixed some crashings. Now plugin should work more stable.</change-notes>
    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <projectService serviceInterface="state.ChangesState" serviceImplementation="state.ChangesState"/>

        <projectService serviceInterface="settings.TopiasSettingsState" serviceImplementation="settings.TopiasSettingsState" />
        <toolWindow id="Topias" anchor="bottom"
                    factoryClass="ui.TopChangedToolWindowFactory"/>

        <!--<codeInsight.parameterNameHints language="JAVA" implementationClass="editor.StatisticsHintsProvider"/>-->
        <!--<editor.linePainter implementation="editor.EditorLP"/>-->
        <projectConfigurable groupId="tools" displayName="Topias Plugin" id="settings.PluginSettingsConfigurable" instance="settings.PluginSettingsConfigurable" />
    </extensions>

    <actions>

    </actions>
    <project-components>
        <component>
            <implementation-class>handlers.ide.ProjectOpenListener</implementation-class>
        </component>
        <component>
            <implementation-class>state.ChangesState</implementation-class>
        </component>
        <component>
            <implementation-class>settings.TopiasSettingsState</implementation-class>

        </component>
    </project-components>
    <application-components>
    </application-components>
</idea-plugin>