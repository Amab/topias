<idea-plugin>
    <id>io.github.likeanowl.topias</id>
    <name>Topias</name>
    <vendor email="svitkovsergey@gmail.com" url="io.github.likeanowl">Contacts</vendor>
    <depends>Git4Idea</depends>
    <description>"Vcs stats plugin aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"</description>
    <version>0.0.1</version>
    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <checkinHandlerFactory implementation="handlers.ide.VcsChangesHandlerFactory"/>
        <projectService serviceInterface="state.ChangesState" serviceImplementation="state.ChangesState"/>
        <!--<codeInsight.parameterNameHints language="JAVA" implementationClass="editor.StatisticsHintsProvider"/>-->
        <!--<editor.linePainter implementation="editor.EditorLP"/>-->
        <projectConfigurable groupId="tools" displayName="Topias Plugin" id="settings.PluginSettingsConfigurable" instance="settings.PluginSettingsConfigurable" />
    </extensions>

    <actions>
        <group id="Topias.SampleMenu" text="VCS stats"
               description="Shows your vcs changes stats">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <!-- Add your actions here -->
            <action id="editor.ShowStatsAction" class="editor.ShowStatsAction" text="Show VCS statistics"/>
        </group>
    </actions>
    <project-components>
        <component>
            <implementation-class>handlers.ide.ProjectOpenListener</implementation-class>
        </component>
        <component>
            <implementation-class>state.ChangesState</implementation-class>
            <interface-class>state.ChangesState</interface-class>
        </component>
    </project-components>
</idea-plugin>